@using Website.Client.Components.Base;
@using Website.Client.Validations;
@using Website.Client.Styles;

<div class="@($"{Class} {(LabelOrientation.Equals("top") ? "flex flex-col" : "flex flex-row")}")">
    @if (!Label.Equals(string.Empty))
    {
        <label for="@Id" class="@($"{Scaling.GetTextScaling()} {(LabelTextOrientation.Equals("center") ? "text-center" : "")} select-none")">@Label</label>
    }
    <TextInput id="@Id"
               class="@($"{Scaling.GetTextScaling()} {ValidStateCss()} {InputStyles.GetInputDefaultStyle()} {TextOrientation}")"
               Placeholder="@Placeholder"
               IsDisabled="@IsDisabled"
               Value="@Value"
               ValueChanged="@ValueChanged"
               ValueExpression="@ValueExpression"
               ValidationFunction="@ValidationFunction"/>
    <ValidationMessage class="@($"{Scaling.GetTextScaling()} text-red w-full")" For="@For" />
</div>