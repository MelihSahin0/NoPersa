@using Website.Client.Components.Base
@using Website.Client.Validations;
@using Website.Client.Styles;

<div class="flex flex-row">
    <div class="flex flex-col">
        <label for="@Id1" class="@Scaling.GetTextScaling() text-center select-none">@Label1</label>
        <InputCheckbox id="@Id1" class="@($"{Scaling.GetTextScaling()} {InputStyles.GetInpuptDefaultStyle()} rounded-full")"
                       @bind-Value="Value1"
                       @oninput="(e) => OnValueChanged(e, 1)" />
    </div>
    <div class="flex flex-col">
        <label for="@Id2" class="@Scaling.GetTextScaling() text-center select-none">@Label2</label>
        <InputCheckbox id="@Id2" class="@($"{Scaling.GetTextScaling()} {InputStyles.GetInpuptDefaultStyle()} rounded-full")"
                       @bind-Value="Value2"
                       @oninput="(e) => OnValueChanged(e, 2)" />
    </div>
</div>
