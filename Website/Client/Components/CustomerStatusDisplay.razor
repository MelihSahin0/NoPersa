@using Website.Client.Styles

<div class="@($"{BackgroundColor} flex flex-col min-w-20 min-h-14 m-2 ring-black ring-1 p-1 rounded-md select-none hover:bg-skyHover")"
     @onclick="@(() => OnClick.InvokeAsync())">
    <button class="@($"{Scaling.GetTextScaling()} text-black w-full")">@Text</button>
    @if (BackgroundColor.Equals("bg-lightRed"))
    {
        <div class="flex justify-center items-center w-full">
            <svg viewBox="0 0 100 100" width="50" height="30" class="text-black">
                <path d="M30,30 L70,70" stroke="currentColor" stroke-width="8" fill="none" />
                <path d="M30,70 L70,30" stroke="currentColor" stroke-width="8" fill="none" />
            </svg>
        </div>
    }
    else if (BackgroundColor.Equals("bg-lightGreen"))
    {
        <div class="flex justify-center items-center w-full">
            <svg viewBox="0 0 100 100" width="50" height="30" class="text-black">
                <path d="M20,50 L40,70 L80,30" stroke="currentColor" stroke-width="8" fill="none" />
            </svg>
        </div>
    }
</div>