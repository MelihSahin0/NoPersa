@page "/modifyFoodWishes"
@using Website.Client.Components
@using Website.Client.Components.Default
@using Website.Client.FormModels
@using Website.Client.Styles

<LoadingPopup IsVisible="@IsSubmitting" />
<EditForm Model="ModifyFoodWishesModel" OnValidSubmit="@Submit" class="w-full flex flex-col">
    <ObjectGraphDataAnnotationsValidator />

    <div class="w-4/6 flex flex-row self-center">
        <div class="p-4 bg-gray-100 rounded-md justify-center w-1/2 m-2">
            <h3 class="text-lg font-semibold mb-4 select-none">Food</h3>
                <FormDefaultDragDropList Class="flex self-center justify-center items-center" MaxHeight="max-h-96" AddButtonDisplay="Add new food"
                             @bind-DragDropInputs="@ModifyFoodWishesModel.FoodWishes" Placeholder="Food name" RemoveButtonDisplay="Delete food"/>
        </div>
        <div class="p-4 bg-gray-100 rounded-md justify-center w-1/2 m-2">
            <h3 class="text-lg font-semibold mb-4 select-none">Ingredients</h3>
            <FormDefaultDragDropList Class="flex self-center justify-center items-center" MaxHeight="max-h-96" AddButtonDisplay="Add new ingredient"
                             @bind-DragDropInputs="@ModifyFoodWishesModel.IngredientWishes" Placeholder="Ingredient name" RemoveButtonDisplay="Delete ingredient"/>
        </div>
    </div>

   <div class="flex flex-row self-center mt-5">
        <button type="button" class="@($"{ButtonStyles.GetButtonNavigationDefaultStyle()} bg-lightRed w-20 mx-2")" @onclick="() => Cancel()">Cancel</button>
        <button type="submit" class="@($"{ButtonStyles.GetButtonNavigationDefaultStyle()} bg-lightGreen w-20 mx-2")">Save</button>
    </div>          
</EditForm>