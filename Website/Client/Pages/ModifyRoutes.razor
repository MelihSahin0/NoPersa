@page "/modifyRoutes"
@using Website.Client.Components
@using Website.Client.FormModels
@using Website.Client.Styles

<LoadingPopup IsVisible="@IsSubmitting"/>
<EditForm Model="ModifyRoutesModel" OnValidSubmit="@Submit" class="w-full flex flex-col">
    <ObjectGraphDataAnnotationsValidator />

    <div class="w-4/6 flex flex-row self-center">
        <div class="p-4 bg-gray-100 rounded-md justify-center w-1/2 m-2">
            <h3 class="text-lg font-semibold mb-4 select-none">Routes to drive</h3>
            <FormDragDropList Class="w-full flex self-center" MaxHeight="max-h-96" IsDrivable="true"
                              @bind-RouteOverviews="ModifyRoutesModel.RouteDeliverableSummary" Placeholder="Route name"/>
        </div>

        <div class="p-4 bg-gray-100 rounded-md justify-center w-1/2 m-2">
            <h3 class="text-lg font-semibold mb-4 select-none">Local delivery</h3>
            <FormDragDropList Class="w-full flex self-center" MaxHeight="max-h-96" IsDrivable="false"
                              @bind-RouteOverviews="ModifyRoutesModel.RouteNonDeliverableSummary" Placeholder="Route Name" />
        </div>
    </div>

   <div class="flex flex-row self-center mt-5">
        <button type="button" class="@($"{ButtonStyles.GetButtonNavigationDefaultStyle()} bg-lightRed w-20 mx-2")" @onclick="() => Cancel()">Cancel</button>
        <button type="submit" class="@($"{ButtonStyles.GetButtonNavigationDefaultStyle()} bg-lightGreen w-20 mx-2")">Save</button>
    </div>          
</EditForm>